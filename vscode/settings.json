{
  "editor.tabSize": 2,
  "git.autofetch": true,
  "editor.fontSize": 19,
  "editor.wordWrap": "on",
  "update.mode": "manual",
  "git.confirmSync": false,
  "mdb.confirmRunAll": false,
  "mdb.mcp.server": "prompt",
  "eslint.format.enable": true,
  "editor.linkedEditing": true,
  "prettier.singleQuote": true,
  "git.enableSmartCommit": true,
  "editor.mouseWheelZoom": true,
  "window.commandCenter": false,
  "editor.smoothScrolling": true,
  "prettier.arrowParens": "avoid",
  "explorer.confirmDelete": false,
  "workbench.startupEditor": "none",
  "editor.suggest.showWords": false,
  "javascript.suggest.paths": false,
  "files.simpleDialog.enable": true,
  "editor.cursorBlinking": "expand",
  "typescript.suggest.paths": false,
  "settingsSync.ignoredSettings": [],
  "postman.telemetry.enabled": false,
  "css.lint.unknownAtRules": "ignore",
  "diffEditor.renderSideBySide": true,
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmPasteNative": false,
  "editor.accessibilitySupport": "off",
  "workbench.statusBar.visible": false,
  "workbench.sideBar.location": "right",
  "window.menuBarVisibility": "compact",
  "editor.parameterHints.enabled": false,
  "editor.fontFamily": "'Cascadia Code'",
  "diffEditor.ignoreTrimWhitespace": true,
  "workbench.editor.enablePreview": false,
  "workbench.layoutControl.enabled": false,
  "workbench.list.openMode": "doubleClick",
  "editor.suggestSelection": "recentlyUsed",
  "editor.cursorSmoothCaretAnimation": "on",
  "scm.repositories.selectionMode": "single",
  "workbench.activityBar.location": "hidden",
  "workbench.colorTheme": "Catppuccin Frapp√©",
  "liveServer.settings.donotShowInfoMsg": true,
  "postman.mcp.notifications.postmanMCP": false,
  "files.exclude": { "**/vendor/uims/**": true },
  "terminal.integrated.defaultLocation": "editor",
  "security.workspace.trust.untrustedFiles": "open",
  "editor.gotoLocation.multipleDefinitions": "goto",
  "diffEditor.useInlineViewWhenSpaceIsLimited": false,
  "workbench.editor.enablePreviewFromQuickOpen": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "js/ts.implicitProjectConfig.strictNullChecks": false,
  "editor.suggest.selectionMode": "whenQuickSuggestion",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "javascript.updateImportsOnFileMove.enabled": "always",
  "[sql]": { "editor.defaultFormatter": "mtxr.sqltools" },
  "workbench.secondarySideBar.defaultVisibility": "hidden",
  "terminal.integrated.enableMultiLinePasteWarning": "never",
  "[prisma]": { "editor.defaultFormatter": "Prisma.prisma" },
  "[c]": { "editor.defaultFormatter": "ms-vscode.cpptools" },
  "[lua]": { "editor.defaultFormatter": "yinfei.luahelper" },
  "terminal.integrated.fontFamily": "MesloLGL Nerd Font Mono",
  "typescript.preferences.includePackageJsonAutoImports": "on",
  "typescript.inlayHints.functionLikeReturnTypes.enabled": true,
  "[php]": { "editor.defaultFormatter": "bmewburn.vscode-intelephense-client" },
  "editor.fontLigatures": "'ss01', 'ss02', 'ss03', 'ss04', 'ss05', 'ss06', 'zero', 'onum'",
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "always",
    "source.sortPackageJson": "always"
  },
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      { "scope": ["source", "text.html"], "settings": { "fontStyle": "" } }
    ]
  },
  "chat.instructionsFilesLocations": {
    ".github/instructions": true,
    "/tmp/postman-folder-pre-request.instructions.md": true,
    "/tmp/postman-folder-post-response.instructions.md": true,
    "/tmp/postman-collections-pre-request.instructions.md": true,
    "/tmp/postman-http-request-pre-request.instructions.md": true,
    "/tmp/postman-collections-post-response.instructions.md": true,
    "/tmp/postman-http-request-post-response.instructions.md": true
  }
}
